<Window x:Class="WpfBug.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid OpacityMask="#E6C18828" Background="Tan">
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="89,192,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="110,47,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="110,109,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="120" />
        <Label Content="UserName" Height="28" HorizontalAlignment="Left" Margin="12,42,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,109,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
